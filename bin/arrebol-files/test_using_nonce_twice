#!/bin/bash
DIRNAME=`dirname $0`
. ${DIRNAME}/arrebol.properties

nonce=$(curl -G "${host}/arrebol/nonce" 2> /dev/null)
echo Nonce ${nonce}
userId=arrebolservice
ldapauth() {
	echo -n Password:
	read -s password
	echo
}
authenticator=$(curl -G "${host}/arrebol/authenticator" 2> /dev/null)
${authenticator}
response=$(curl -G -H "X-auth-credentials: { userId: '${userId}', password: '${password}', nonce: '${nonce}' }" "${host}/arrebol/job" 2> /dev/null)
echo ${response}
response=$(curl -G -H "X-auth-credentials: { userId: '${userId}', password: '${password}', nonce: '${nonce}' }" "${host}/arrebol/job" 2> /dev/null)
echo ${response}
